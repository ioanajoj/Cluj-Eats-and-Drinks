<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#DFD7D7</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmolTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#EEE6E6</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#DFD7D7</item>
    </style>

    <style name="MainTextStyleDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#352E2E</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmolTextStyleDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#352E2E</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#DFD7D7</item>
    </style>

    <style name="SmollerTextStyleDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#352E2E</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#DFD7D7</item>
    </style>

    <style name="BorderlessButtonWithStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#eff3f9</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MarginButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_margin">7dp</item>
        <item name="android:textColor">#eff3f9</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
